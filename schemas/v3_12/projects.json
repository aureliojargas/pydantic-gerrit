{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "ProjectInfo",
  "description": "Project information from Gerrit",
  "type": "object",
  "properties": {
    "id": {
      "type": "string",
      "description": "The URL encoded project name"
    },
    "name": {
      "type": "string",
      "description": "The name of the project"
    },
    "parent": {
      "$ref": "projects.json#/ProjectInfo",
      "description": "The parent project"
    },
    "description": {
      "type": "string",
      "description": "The description of the project"
    },
    "state": {
      "type": "string",
      "enum": ["ACTIVE", "READ_ONLY", "HIDDEN"],
      "description": "The state of the project"
    },
    "labels": {
      "type": "object",
      "description": "The labels that are configured for the project",
      "additionalProperties": {
        "$ref": "labels.json#/LabelInfo"
      }
    },
    "web_links": {
      "type": "array",
      "description": "Links to the project in external systems",
      "items": {
        "type": "object",
        "properties": {
          "name": {
            "type": "string",
            "description": "The name of the link"
          },
          "url": {
            "type": "string",
            "description": "The URL of the link"
          },
          "target": {
            "type": "string",
            "description": "The target of the link"
          }
        }
      }
    },
    "themes": {
      "type": "array",
      "description": "The list of theme names for the project",
      "items": {
        "type": "string"
      }
    },
    "branches": {
      "type": "array",
      "description": "The list of branches in the project",
      "items": {
        "$ref": "branches.json#/BranchInfo"
      }
    },
    "config": {
      "type": "object",
      "description": "The project configuration",
      "properties": {
        "max_object_size_limit": {
          "type": "string",
          "description": "Maximum allowed Git object size"
        },
        "submit_type": {
          "type": "string",
          "enum": ["MERGE_IF_NECESSARY", "FAST_FORWARD_ONLY", "REBASE_IF_NECESSARY", "REBASE_ALWAYS", "MERGE_ALWAYS", "CHERRY_PICK"],
          "description": "The submit type for the project"
        },
        "state": {
          "type": "string",
          "enum": ["ACTIVE", "READ_ONLY", "HIDDEN"],
          "description": "The state of the project"
        },
        "commentlinks": {
          "type": "object",
          "description": "Comment link configuration",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "match": {
                "type": "string",
                "description": "Regular expression to match comments"
              },
              "link": {
                "type": "string",
                "description": "Link template"
              },
              "html": {
                "type": "string",
                "description": "HTML template"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the comment link is enabled"
              }
            }
          }
        },
        "plugin_config": {
          "type": "object",
          "description": "Plugin-specific configuration",
          "additionalProperties": true
        },
        "actions": {
          "type": "object",
          "description": "Actions that can be executed on the project",
          "additionalProperties": {
            "type": "object",
            "properties": {
              "method": {
                "type": "string",
                "description": "HTTP method to use"
              },
              "label": {
                "type": "string",
                "description": "Short description of the action"
              },
              "title": {
                "type": "string",
                "description": "Longer description of the action"
              },
              "enabled": {
                "type": "boolean",
                "description": "Whether the action is enabled"
              }
            }
          }
        }
      }
    }
  },
  "required": ["id", "name"]
}
