{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "FileInfo",
  "description": "Information about a file in a revision",
  "type": "object",
  "properties": {
    "status": {
      "type": "string",
      "enum": ["A", "D", "R", "C", "W"],
      "description": "File status (A=Added, D=Deleted, R=Renamed, C=Copied, W=Rewritten)"
    },
    "binary": {
      "type": "boolean",
      "description": "Whether the file is binary"
    },
    "old_path": {
      "type": "string",
      "description": "Old path in case the file was moved"
    },
    "lines_inserted": {
      "type": "integer",
      "description": "Number of inserted lines"
    },
    "lines_deleted": {
      "type": "integer",
      "description": "Number of deleted lines"
    },
    "size_delta": {
      "type": "integer",
      "description": "Size change in bytes"
    },
    "size": {
      "type": "integer",
      "description": "File size in bytes"
    }
  }
}
